<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/cardContato"

    >

    <ImageView
        android:id="@+id/foto_contato"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/foto_perfil"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="@+id/cardContato"
        app:layout_constraintStart_toStartOf="@+id/cardContato"
        app:layout_constraintBottom_toBottomOf="@+id/cardContato"
        />

    <ImageView
        android:id="@+id/ic_notificacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notificacao"
        android:layout_marginTop="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="@+id/cardContato"
        app:layout_constraintStart_toStartOf="@+id/cardContato"
        app:layout_constraintBottom_toBottomOf="@+id/cardContato"
        />

    <TextView
        android:id="@+id/nome_contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="André"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/cardContato"
        app:layout_constraintStart_toEndOf="@+id/foto_contato"
        android:textColor="@color/nome_contato"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/mensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vamos almoçar hoje?"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/nome_contato"
        app:layout_constraintStart_toEndOf="@+id/foto_contato"
        android:textColor="@color/texto_conversa"
        />

    <TextView
        android:id="@+id/horario_mensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:20"
        android:textColor="@color/principal"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="@id/cardContato"
        app:layout_constraintTop_toTopOf="@id/cardContato"
        />

</androidx.constraintlayout.widget.ConstraintLayout>